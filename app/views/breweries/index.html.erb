<% unless user_signed_in? %>
  <% controller.redirect_to new_user_session_path , notice: "Please sign in." %>
<% end %>
<h1>Listing Breweries</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Brewery name</th>
      <th>Brewery country</th>
      <th>Brewery location</th>
      <th>Beer count</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.brewery_name, user_brewery_beers_path(@user, brewery) %></td>
        <td><%= brewery.brewery_country %></td>
        <td><%= brewery.brewery_location %></td>
        <td><%= brewery.beer_count %></td>
        <td><%= brewery.user_id %></td>
        <td><%= link_to 'Show', [@user, brewery] %></td>
        <td><%= link_to 'Edit', edit_user_brewery_path(@user, brewery) %></td>
        <td><%= link_to 'Destroy', [@user, brewery], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brewery', new_user_brewery_path(@user), class: "btn btn-link" %>
