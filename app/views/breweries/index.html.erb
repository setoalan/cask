<p id="notice"><%= notice %></p>

<h1>Listing Breweries</h1>

<table>
  <thead>
    <tr>
      <th>Brewery name</th>
      <th>Brewery country</th>
      <th>Brewery location</th>
      <th>Beer count</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= brewery.brewery_name %></td>
        <td><%= brewery.brewery_country %></td>
        <td><%= brewery.brewery_location %></td>
        <td><%= brewery.beer_count %></td>
        <td><%= brewery.user_id %></td>
        <td><%= link_to 'Show', brewery %></td>
        <td><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
        <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

