<h1>Listing Reservations</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Email</th>
      <th>Request date time</th>
      <th>Message</th>
      <th>User</th>
      <th>Brewery</th>
      <% if @user %>
        <th>Edit</th>
        <th>Delete</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= link_to reservation.email, [@user, @brewery, reservation] %></td>
        <td><%= reservation.request_date_time %></td>
        <td><%= reservation.message %></td>
        <td><%= reservation.user_id %></td>
        <td><%= reservation.brewery_id %></td>
        <% if @user && @brewery %>
          <td><%= link_to 'Edit', edit_user_brewery_reservation_path(@user, @brewery, reservation) %></td>
          <td><%= link_to 'Destroy', [@user, @brewery, reservation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% elsif @user %>
          <td><%= link_to 'Edit', edit_user_reservation_path(@user, reservation) %></td>
          <td><%= link_to 'Destroy', [@user, reservation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_brewery_reservation_path( @brewery), class: 'btn btn-link' unless @user %>
