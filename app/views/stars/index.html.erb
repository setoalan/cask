<% title 'Listing Stars' %>
<h1>Listing Stars</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>User</th>
      <th>Brewery</th>
      <th>Un-Star</th>
    </tr>
  </thead>

  <tbody>
    <% @stars.each do |star| %>
      <tr>
        <td><%= star.user.name %></td>
        <td><%= star.brewery.brewery_name %></td>
        <td><%= link_to 'Unfavorite', [@user, star], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
